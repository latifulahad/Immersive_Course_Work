<!DOCTYPE html>
<html>
  <head>
    <title>TodoP3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <% if current_user %>
      <%= auth_token %>
      <%= link_to "edit-acct", edit_user_url(current_user) %>
      <%= button_to "Log-out", session_url, method: :delete %>
    <% else %>
      <%= link_to "Log-in", new_session_url %>  
    <% end %>

    <%= yield %>
  </body>
</html>
